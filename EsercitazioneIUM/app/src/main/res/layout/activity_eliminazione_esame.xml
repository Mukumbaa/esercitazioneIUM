<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrazioneActivity"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@color/background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/messaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="26sp"
            android:text="Eliminare questo esame?"
            android:layout_above="@id/riepilogoEsame"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"

            />

        <RelativeLayout
            android:id="@+id/riepilogoEsame"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="190dp"
            android:background="@drawable/libretto_box"
            android:paddingStart="10dp"

            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/textViewNomeEsame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Analisi matematica"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="23dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewVoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNomeEsame"
                android:text="30"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="25dp"

                />

            <TextView
                android:id="@+id/textViewCfu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewVoto"
                android:layout_marginBottom="10dp"
                android:text="9 CFU"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="15dp"

                />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/buttonEliminaEsame"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_button"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/riepilogoEsame"
            >
        </ImageButton>
        <TextView
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:text="Elimina"
            android:textColor="@color/text"
            android:textSize="26dp"
            android:textAlignment="center"
            android:layout_below="@id/riepilogoEsame"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />
        <ImageButton
            android:id="@+id/buttonIndietro"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/libretto_box"
            android:src="@drawable/arrow_right"
            android:rotation="180"
            android:layout_below="@id/buttonEliminaEsame"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:tint="@color/text"
            >
        </ImageButton>


    </RelativeLayout>



</ScrollView>