<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@id/editTextMatricola"
        android:layout_marginBottom="70dp"
        />



    <EditText
        android:id="@+id/editTextMatricola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:drawableStart="@drawable/user"
        android:drawablePadding="15dp"
        android:drawableTint="@color/text"
        android:hint="Matricola"
        android:paddingStart="10dp"
        android:textAlignment="gravity"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/editTextPassword"
        android:maxLength="20"
        />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="15dp"
        android:drawableTint="@color/text"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingStart="10dp"
        android:textAlignment="gravity"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonHidePassword"

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="70dp"
        android:background="#00000000"
        android:foreground="@drawable/hide"
        android:foregroundTint="@color/hint"
        android:padding="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registrati"
        android:layout_below="@+id/editTextPassword"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:paddingStart="20dp"
        android:textAlignment="center"
        android:text="Non hai un account? Registrati qui"
        android:textColor="@color/text"
        android:textSize="16dp"
        />


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:text="@string/login"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text"
        android:textSize="26sp"
        android:layout_below="@+id/editTextPassword"
        >
    </Button>


